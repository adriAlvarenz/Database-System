@model Sim
@{
    ViewBag.Title = "Edit Sim";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="SimID" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <div><span asp-validation-for="LastName" class="text-danger"></span></div>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Money"></label>
        <div><span asp-validation-for="Money" class="text-danger"></span></div>
        <input asp-for="Money" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control">
            <option>Male</option>
            <option>Female</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="LifeStage"></label>
        <select asp-for="LifeStage" class="form-control">
            <option>Infant</option>
            <option>Teenager</option>
            <option>Young Adult</option>
            <option>Adult</option>
            <option>Elder</option>
        </select>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>