@model IEnumerable<Sim>
@{
    ViewBag.Title = "All Sims";

}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Money</th>
        <th>Gender</th>
        <th>Life Stage</th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td class="text-right">@item.SimID</td>
    <td>
        <a class="nav-link" asp-controller="Sim" asp-action="Profile" asp-route-id="@item.SimID">@item.Name</a>
    </td>
    <td>@item.LastName</td>
    <td>@item.Money.ToString("c")</td>
    <td>@item.Gender</td>
    <td>@item.LifeStage</td>
    <td class="text-center">
        <form asp-action="Delete" method="post">
            <a asp-action="Edit" class="btn btn-sm btn-warning"
               asp-route-SimID="@item.SimID">
                Edit
            </a>
            <input type="hidden" name="SimID" value="@item.SimID" />
            <button type="submit" class="btn btn-danger btn-sm">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Sims</a>
    <a asp-action="FilterForm" class="btn btn-secondary">Search</a>
</div>