@model SimProfessionViewModel


@if (Model.CurrentProfessionName != null)
{   
    <div class="margin">
    <p>
        @Model.Sim.Name is currently a level @Model.Level @Model.CurrentProfessionName</p>
    </div>
}
@using (Html.BeginForm("ChooseProfession", "Sim", FormMethod.Post, new { id = "simProfession" }))
{
    <div class="form-group margin">
        @Html.LabelFor(p => p.ProfessionID)
        @Html.DropDownListFor(p => p.ProfessionID, new SelectList(Model.Professions, "ProfessionID", "Name"), new { @class = "form-control" })
    </div>

    @Html.HiddenFor(p => p.Sim.SimID)
    @Html.HiddenFor(p => p.Sim.Name)
    @Html.HiddenFor(p => p.Sim.LastName)
    @Html.HiddenFor(p => p.Sim.Gender)
    @Html.HiddenFor(p => p.Sim.Money)
    @Html.HiddenFor(p => p.Sim.LifeStage)
    

    <button type="submit" class="btn btn-primary">Accept</button>
    <a asp-action="Profile" asp-route-id="@Model.Sim.SimID" class="btn btn-secondary">Cancel</a>

}
