@model IEnumerable<Quest>
@{
    ViewBag.Title = "All Quests";
    Layout = "_AdminLayout";

}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th>Cost</th>
        <th>Reward</th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.QuestID</td>
            <td>
                @item.Name
            </td>
            <td>@item.Cost</td>
            <td>@item.Reward</td>

            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-controller="Quest" asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-QuestID="@item.QuestID">
                        Edit
                    </a>
                    <input type="hidden" name="QuestID" value="@item.QuestID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Quest</a>
</div>