@model Quest
@{
    ViewBag.Title = "Edit Quest";
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="QuestID" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <div><span asp-validation-for="Cost" class="text-danger"></span></div>
        <input asp-for="Cost" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Reward"></label>
        <div><span asp-validation-for="Reward" class="text-danger"></span></div>
        <input asp-for="Reward" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>