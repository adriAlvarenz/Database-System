@model IEnumerable<Pet>
@{
    ViewBag.Title = "All Pets";
    Layout = "_AdminLayout";

}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th>Type</th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td class="text-right">@item.PetID</td>
    <td>
    <a class="nav-link" asp-controller="Pet" asp-action="Profile" asp-route-id="@item.PetID">@item.Name</a>
    </td>
    <td>@item.TypeName</td>

    <td class="text-center">
        <form asp-action="Delete" method="post">
            <a asp-action="Edit" class="btn btn-sm btn-warning"
               asp-route-PetID="@item.PetID">
                Edit
            </a>
            <input type="hidden" name="PetID" value="@item.PetID" />
            <button type="submit" class="btn btn-danger btn-sm">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Pet</a>
</div>