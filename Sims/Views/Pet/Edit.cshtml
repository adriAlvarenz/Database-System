@model PetEditViewModel


@using (Html.BeginForm("Edit", "Pet", FormMethod.Post, new { id = "petEdit" }))
{
    <div class="form-group margin">
        @Html.LabelFor(p => p.Pet.Name)
        @Html.TextBoxFor(p => p.Pet.Name, new { @class = "form-control" })
    </div>
    <div class="form-group margin">
        @Html.LabelFor(t => t.TypeId)
        @Html.DropDownListFor(t => t.TypeId, new SelectList(Model.Types, "TypeID", "Name"), new { @class = "form-control" })
    </div>
    @Html.HiddenFor(p => p.Pet.TypeName)
    @Html.HiddenFor(p => p.Pet.PetID)
    <button type="submit" class="btn btn-primary">Accept</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

}
