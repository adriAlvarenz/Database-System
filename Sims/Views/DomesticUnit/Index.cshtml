@model IEnumerable<DomesticUnit>
@{
    ViewBag.Title = "All Domestic Units";


}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th>Rooms</th>
        <th>Bathrooms</th>
        <th>Description</th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.DomesticUnitID</td>
            <td>
            <a class="nav-link" asp-controller="DomesticUnit" asp-action="Profile" asp-route-id="@item.DomesticUnitID">@item.Name</a>
            </td>
            <td>@item.RoomNumber</td>
            <td>@item.BathroomNumber</td>
            <td>@item.Description</td>
            
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-DomesticUnitID="@item.DomesticUnitID">
                        Edit
                    </a>
                    <input type="hidden" name="DomesticUnitID" value="@item.DomesticUnitID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Domestic Unit</a>
</div>