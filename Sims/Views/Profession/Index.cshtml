@model IEnumerable<Profession>
@{
    ViewBag.Title = "All Professions";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th>Name</th>
        <th>Basic Salary</th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                <a class="nav-link" asp-controller="Activity" asp-action="Profile" asp-route-id="@item.ProfessionID">@item.Name</a>
            </td>
            <td>@item.BasicSalary</td>

            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-ProfessionID="@item.ProfessionID">
                        Edit
                    </a>
                    <input type="hidden" name="ProfessionID" value="@item.ProfessionID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Profession</a>
</div>