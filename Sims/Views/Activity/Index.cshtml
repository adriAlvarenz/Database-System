@model IEnumerable<Activity>
@{
    ViewBag.Title = "All Activities";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        
        <th>Name</th>
        <th>Description</th>
        <th class="text-center"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
        
            <td>
                <a class="nav-link" asp-controller="Activity" asp-action="Profile" asp-route-id="@item.ActivityID">@item.Name</a>
            </td>
            <td>@item.Description</td>

            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-ActivityID="@item.ActivityID">
                        Edit
                    </a>
                    <input type="hidden" name="ActivityID" value="@item.ActivityID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Activity</a>
</div>